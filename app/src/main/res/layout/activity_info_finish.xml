<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="@dimen/layout_padding"
        >

        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/butler_placeholder"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/paragraph_padding"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_finish_butlerSpeech"
                    android:layout_weight=".5"
                    />
            </LinearLayout>
            <!-- TODO: latter, add chat here-->
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="bottom"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        >
        <ImageButton
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:src="@mipmap/ic_menu"
            android:contentDescription="@string/taskbar_LabelDashboard"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/info_finish_buttonDashboard"
            />

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:src="@mipmap/ic_add"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:id="@+id/info_finish_buttonAddTask"
            />

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:src="@mipmap/ic_settings"
            android:contentDescription="@string/taskbar_LabelSetting"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/info_finish_buttonSetting"
            />
    </RelativeLayout>
</LinearLayout>

