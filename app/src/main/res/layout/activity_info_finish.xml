<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="@dimen/layout_padding"
        >

        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/butler_placeholder"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/paragraph_padding"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/info_finish_butlerSpeech"
                    android:layout_weight=".5"
                    />
            </LinearLayout>
            <!-- TODO: latter, add chat here-->
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="bottom">
        <Button
            android:id="@+id/info_finish_buttonDashboard"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:drawableTop="@mipmap/ic_menu"/>
        <AbsoluteLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/info_finish_buttonAddTask"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:drawableTop="@mipmap/ic_add"/>
        <AbsoluteLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/info_finish_buttonSetting"
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:drawableTop="@mipmap/ic_settings"/>
    </LinearLayout>

</LinearLayout>

