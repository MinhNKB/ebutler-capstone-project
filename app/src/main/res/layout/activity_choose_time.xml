<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ChooseTime">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choose_time_datePicker"
            android:layout_marginBottom="@dimen/paragraph_padding"/>

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choose_time_timePicker"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:weightSum="1.0"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/choose_time_textButtonConfirm"
                android:layout_weight="0.5"
                android:background="@drawable/blue_button"
                android:textColor="@color/background"
                android:drawableLeft="@mipmap/ic_done"
                android:layout_marginLeft="@dimen/layout_padding"
                android:layout_marginRight="@dimen/layout_padding"
                android:layout_marginBottom="5dp"
                android:id="@+id/choose_time_buttonConfirm"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/task_detail_textButtonCancel"
                android:layout_weight="0.5"
                android:background="@drawable/border_button"
                android:textColor="@color/colorPrimary"
                android:drawableLeft="@mipmap/ic_clear_blue"
                android:layout_marginLeft="@dimen/layout_padding"
                android:layout_marginRight="@dimen/layout_padding"
                android:layout_marginBottom="5dp"
                android:id="@+id/choose_time_buttonCancel"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
