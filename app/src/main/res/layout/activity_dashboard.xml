<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.guardian.ebutler.ebutler.Dashboard">

    <LinearLayout
        android:id="@+id/dashboard_topBar"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_padding">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/butler"/>
        <TextView
            android:id="@+id/dashboard_textViewButlerSpeech"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/dashboard_butlerSpeechGreetings"/>
        <SearchView
            android:id="@+id/dashboard_searchView"
            android:visibility="gone"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:queryHint="@string/search_bar_queryHint"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/dashboard_buttonRoundAdd"
            android:layout_width="@dimen/taskbar_iconSize"
            android:layout_height="@dimen/taskbar_iconSize"
            android:layout_marginTop="@dimen/layout_padding"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/ic_add_round"
            android:onClick="buttonRoundAdd_onClick"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginRight="@dimen/layout_padding"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.tyczj.extendedcalendarview.ExtendedCalendarView
            android:id="@+id/dashboard_extendedCalendar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="370dp">
        </com.tyczj.extendedcalendarview.ExtendedCalendarView>
        <LinearLayout
            android:id="@+id/dashboard_miniTaskView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:onClick="miniTaskView_onClick">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/review_green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Giặt đồ"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="12dp"
                    android:background="@color/colorAccent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Đi đóng tiền điện"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <ImageButton
                android:id="@+id/dashboard_buttonArrow"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@mipmap/ic_arrow_down_black"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:onClick="buttonArrow_onclick" />
        </RelativeLayout>
        <ListView
            android:visibility="visible"
            android:id="@+id/dashboard_listViewTasks"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        </ListView>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/dashboard_taskBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/taskbar_height"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">
        <ImageButton
            android:layout_width="@dimen/taskbar_iconSize"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:src="@mipmap/ic_search"
            android:contentDescription="@string/taskbar_LabelDashboard"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/dashboard_buttonSearch"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:onClick="buttonSearch_onClick"/>
        <ImageButton
            android:layout_width="@dimen/taskbar_iconSize"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:src="@mipmap/ic_add"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/dashboard_buttonAdd"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:onClick="buttonAdd_onClick"/>
    </RelativeLayout>
</LinearLayout>
