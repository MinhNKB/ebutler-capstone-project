<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.guardian.ebutler.ebutler.Dashboard"
    android:id="@+id/dashboard_parent">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/dashboard_topBar"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_padding">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/butler_gif"/>

        <TextView
            android:id="@+id/dashboard_textViewButlerSpeech"
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/layout_padding"
            android:text="@string/dashboard_butlerSpeechGreetings"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dashboard_linearLayoutSearch"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
            android:layout_margin="@dimen/layout_padding"
            android:layout_width="@dimen/taskbar_iconSize"
            android:layout_height="@dimen/taskbar_iconSize"
            android:background="@drawable/white_button"
            android:src="@mipmap/ic_arrow_back_grey"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:onClick="buttonBackSearch_onClick"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_padding"
                android:orientation="vertical">
                <SearchView
                    android:id="@+id/dashboard_searchView"
                    android:focusable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:queryHint="@string/search_bar_queryHint"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <ImageButton
                            android:id="@+id/dashboard_buttonAlarm"
                            android:layout_margin="@dimen/layout_padding"
                            android:layout_width="@dimen/taskbar_iconSize"
                            android:layout_height="@dimen/taskbar_iconSize"
                            android:background="@drawable/blue_round_button_active"
                            android:src="@mipmap/ic_alarm"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:onClick="buttonAlarm_onClick"/>
                        <ImageButton
                            android:id="@+id/dashboard_buttonCheckList"
                            android:layout_margin="@dimen/layout_padding"
                            android:layout_width="@dimen/taskbar_iconSize"
                            android:layout_height="@dimen/taskbar_iconSize"
                            android:background="@drawable/blue_round_button_active"
                            android:src="@mipmap/ic_playlist_add_check"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:onClick="buttonCheckList_onClick"/>
                        <ImageButton
                            android:id="@+id/dashboard_buttonNote"
                            android:layout_margin="@dimen/layout_padding"
                            android:layout_width="@dimen/taskbar_iconSize"
                            android:layout_height="@dimen/taskbar_iconSize"
                            android:background="@drawable/blue_round_button_active"
                            android:src="@mipmap/ic_note"
                            android:scaleType="fitCenter"
                            android:adjustViewBounds="true"
                            android:onClick="buttonNote_onClick"/>
                    </LinearLayout>
                    <Spinner
                        android:id="@+id/dashboard_spinnerSort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:spinnerMode="dropdown"
                        android:entries="@array/sort_modes"
                        >
                    </Spinner>
                    <ImageButton
                        android:id="@+id/dashboard_buttonSort"
                        android:layout_margin="@dimen/layout_padding"
                        android:layout_width="@dimen/taskbar_iconSize"
                        android:layout_height="@dimen/taskbar_iconSize"
                        android:background="@drawable/blue_round_button_active"
                        android:src="@mipmap/ic_arrow_downward"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:onClick="buttonSort_onClick"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--<View style="@style/Divider"/>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_padding_double"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginRight="@dimen/layout_padding"
        android:layout_weight="1"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
        </RelativeLayout>
        <ListView
            android:visibility="visible"
            android:id="@+id/dashboard_listViewTasks"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        </ListView>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/dashboard_taskBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/taskbar_height"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">
        <ImageButton
            android:layout_width="@dimen/taskbar_iconSize"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:src="@mipmap/ic_search"
            android:contentDescription="@string/taskbar_LabelDashboard"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/dashboard_buttonSearch"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:onClick="buttonSearch_onClick"/>
        <ImageButton
            android:layout_width="@dimen/taskbar_iconSize"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:src="@mipmap/ic_add"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:id="@+id/dashboard_buttonAdd"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:onClick="buttonAdd_onClick"/>
        <ImageButton
            android:id="@+id/dashboard_buttonViewType"
            android:layout_width="@dimen/taskbar_iconSize"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:src="@mipmap/ic_date_range"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:onClick="buttonViewType_onClick"/>
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/dashboard_linearLayout_addTaskBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/taskbar_height"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/taskbar_height">
            <ImageButton
                android:layout_width="@dimen/taskbar_iconSize"
                android:layout_height="match_parent"
                android:background="@drawable/blue_button"
                android:src="@mipmap/ic_arrow_back"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/layout_padding_double"
                android:onClick="buttonBack_onClick"/>
            <ImageButton
                android:layout_width="@dimen/taskbar_iconSize"
                android:layout_height="match_parent"
                android:background="@drawable/blue_button"
                android:src="@mipmap/ic_alarm_add"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/layout_padding_double"
                android:onClick="buttonAlarmAdd_onClick"/>
            <ImageButton
                android:layout_width="@dimen/taskbar_iconSize"
                android:layout_height="match_parent"
                android:background="@drawable/blue_button"
                android:src="@mipmap/ic_playlist_add_check"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginLeft="@dimen/layout_padding_double"
                android:onClick="buttonCheckListAdd_onClick"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:clickable="true"
                android:text="Ghi chú nhanh..."
                android:textColor="@color/background"
                android:textSize="@dimen/font_size_extra_large"
                android:onClick="textViewAddNote_onClick"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
