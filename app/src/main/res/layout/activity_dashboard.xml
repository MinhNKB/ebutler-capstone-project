<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.guardian.ebutler.ebutler.Dashboard">

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:textSize="18dp"-->
            <!--android:textColor="@color/background"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:text="Màn hình chính"-->
            <!--/>-->
        <SearchView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:queryHint="@string/search_bar_queryHint">
        </SearchView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_padding"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/butler_placeholder"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_script"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.tyczj.extendedcalendarview.ExtendedCalendarView
            android:id="@+id/extendedCalendar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="370dp">
        </com.tyczj.extendedcalendarview.ExtendedCalendarView>
        <LinearLayout
            android:id="@+id/miniTaskView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:onClick="miniTaskView_onClick">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/layout_padding"
                    android:background="@color/review_green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Giặt đồ"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/layout_padding"
                    android:background="@color/colorAccent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Đi đóng tiền điện"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <ImageButton
                android:id="@+id/button_arrow"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@mipmap/ic_arrow_down_black"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:onClick="button_arrow_onclick" />
        </RelativeLayout>
        <ListView
            android:visibility="visible"
            android:id="@+id/listView_tasks"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        </ListView>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/taskbar_height"
        android:gravity="bottom"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        >
        <ImageButton
            android:layout_width="@dimen/taskbar_iconSize"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:src="@mipmap/ic_add"
            android:contentDescription="@string/choose_location_textButtonAddLocation"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/dashboard_buttonAddTask"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />

        <ImageButton
            android:layout_width="@dimen/taskbar_iconSize"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:src="@mipmap/ic_settings"
            android:contentDescription="@string/taskbar_LabelSetting"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/dashboard_buttonSetting"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />
    </RelativeLayout>
</LinearLayout>
