<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.guardian.ebutler.ebutler.Dashboard">

    <LinearLayout
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="#2962ff"
        android:orientation="horizontal">
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:textSize="18dp"-->
            <!--android:textColor="@color/background"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:text="Màn hình chính"-->
            <!--/>-->
        <SearchView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:queryHint="@string/dashboard_queryHint">
        </SearchView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/butler_placeholder"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dashboard_script"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <com.tyczj.extendedcalendarview.ExtendedCalendarView
            android:id="@+id/extendedCalendar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="370dp">
        </com.tyczj.extendedcalendarview.ExtendedCalendarView>
        <LinearLayout
            android:id="@+id/miniTaskView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:onClick="miniTaskView_onClick">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/layout_padding"
                    android:background="@color/review_green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Giặt đồ"/>
                <View
                    android:layout_width="5dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="@dimen/layout_padding"
                    android:background="@color/colorAccent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Đi đóng tiền điện"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <ImageButton
                android:id="@+id/button_arrow"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@mipmap/ic_arrow_down_black"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:onClick="button_arrow_onclick" />
        </RelativeLayout>
        <ListView
            android:visibility="visible"
            android:id="@+id/listView_tasks"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="bottom">
        <Button
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:drawableTop="@mipmap/ic_menu"/>
        <AbsoluteLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:drawableTop="@mipmap/ic_add"/>
        <AbsoluteLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <Button
            android:layout_margin="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:drawableTop="@mipmap/ic_settings"/>
    </LinearLayout>
</LinearLayout>
