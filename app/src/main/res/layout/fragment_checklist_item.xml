<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guardian.ebutler.fragments.tasks.CheckListItemFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_checklist_item_Checkbox"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/fragment_checklist_item_TextView"/>
        <ImageButton
            android:layout_width="@dimen/inline_icon_size"
            android:layout_height="@dimen/inline_icon_size"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_clear_black"
            android:background="@color/background"
            android:id="@+id/fragment_checklist_item_Delete"
            android:adjustViewBounds="true"/>
    </LinearLayout>

</FrameLayout>
