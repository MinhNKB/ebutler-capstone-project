<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.guardian.ebutler.ebutler.TaskDetail"
    android:orientation="vertical"
    android:id="@+id/task_detail_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_padding_double">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="50dp"
            android:maxWidth="50dp"
            android:scaleType="fitCenter"
            android:src="@drawable/butler_gif"/>
        <TextView
            android:visibility="visible"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/task_detail_ButlerChatStatment"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/layout_padding">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/task_detail_basicInfo"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/layout_padding"
                android:layout_marginBottom="@dimen/layout_padding">
                <EditText
                    android:id="@+id/task_detail_editTextTaskName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/task_detail_hintTaskName"
                    android:layout_marginBottom="@dimen/layout_padding_double"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/layout_padding_double">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/task_detail_labelTime"
                        android:paddingRight="10dp"
                        android:paddingEnd="10dp"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/task_detail_hintTime"
                        android:layout_weight="1"
                        android:id="@+id/task_detail_editTextTime"/>
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/task_detail_hintDate"
                        android:layout_weight="1"
                        android:id="@+id/task_detail_editTextDate"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/layout_padding_double">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/task_detail_labelLocation"
                        android:paddingRight="10dp"
                        android:paddingEnd="10dp"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/task_detail_hintLocation"
                        android:layout_weight="1"
                        android:id="@+id/task_detail_editTextLocation"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/layout_padding_double">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/task_detail_labelRepeat"
                        android:paddingRight="10dp"
                        android:paddingEnd="10dp"/>
                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:entries="@array/task_detail_taskRepeatOptions"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>
            <View style="@style/Divider"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_padding_double"
                android:layout_marginBottom="@dimen/layout_padding_double"
                >
                <ImageButton
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@mipmap/ic_clear_blue"
                    android:background="@color/background"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/task_detail_labelCalling"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/task_detail_hintCalling"/>
                </LinearLayout>
            </RelativeLayout>
            <View style="@style/Divider"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_padding_double"
                android:layout_marginTop="@dimen/layout_padding_double">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/task_detail_textButtonAddPlugin"
                    android:background="@drawable/border_button"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/layout_padding"
                    android:paddingRight="@dimen/layout_padding"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/taskbar_height"
        android:gravity="bottom"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        >
        <ImageButton
            android:layout_width="@dimen/taskbar_iconSize"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:src="@mipmap/ic_done"
            android:contentDescription="@string/task_detail_textButtonFinish"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/task_detail_buttonDone"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />
        <!--<ImageButton-->
            <!--android:layout_width="@dimen/taskbar_iconSize"-->
            <!--android:layout_height="match_parent"-->
            <!--android:background="@drawable/blue_button"-->
            <!--android:src="@mipmap/ic_clear"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:adjustViewBounds="true"-->
            <!--/>-->
        <ImageButton
            android:layout_width="@dimen/taskbar_iconSize"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:src="@mipmap/ic_clear"
            android:contentDescription="@string/task_detail_textButtonCancel"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/task_detail_buttonCancel"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />
    </RelativeLayout>
</LinearLayout>
