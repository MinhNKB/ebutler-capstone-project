<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eef"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".UserInfoInput">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/butler"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/paragraph_padding"/>
    <ScrollView
        android:id="@+id/user_info_input_scrollViewConversation"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/layout_padding"
        >
        <LinearLayout
            android:id="@+id/user_info_input_linearLayoutConversation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_margin="@dimen/layout_padding_double"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/out_message_bg"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu nhập hàng tháng của gia đình bạn vào khoảng"
                    android:maxWidth="@dimen/conversation_statement_maxWidth"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/out_message_bg"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu nhập hàng tháng của gia đình bạn vào khoảng"
                    android:maxWidth="@dimen/conversation_statement_maxWidth"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    />
            </RelativeLayout>
            <!-- TODO: latter, add chat here-->
        </LinearLayout>
    </ScrollView>


    <RelativeLayout
        android:id="@+id/category_list_taskBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/taskbar_height"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">
        <ImageButton
            android:layout_width="@dimen/taskbar_iconSize"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:src="@mipmap/ic_clear"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/user_info_input_declineButton"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />
        <EditText
            android:id="@+id/wel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_info_input_declineButton"
            android:layout_toLeftOf="@id/user_info_input_okButton"
            android:textColor="@color/background"/>
        <ImageButton
            android:layout_width="@dimen/taskbar_iconSize"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:src="@mipmap/ic_done"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/user_info_input_okButton"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:onClick="buttonOk_onClick"
            />
    </RelativeLayout>
</LinearLayout>
