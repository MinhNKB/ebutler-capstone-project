<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/layout_padding"
    tools:context="com.guardian.ebutler.fragments.MiniTaskFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/fragment_mini_task_imageButton"
            android:layout_width="@dimen/inline_icon_size"
            android:layout_height="@dimen/inline_icon_size"
            android:background="@drawable/blue_round_button_active"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_alarm"
            android:scaleType="fitCenter"
            android:layout_marginRight="@dimen/layout_padding"
            android:adjustViewBounds="true"
            />
        <TextView
            android:id="@+id/fragment_mini_task_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_medium"
            android:layout_gravity="center_vertical"
            android:text="Nhắc nhở"/>
    </LinearLayout>

</FrameLayout>
